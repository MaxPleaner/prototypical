<container id="user">
  <h4>User profile page</h4>
  <b>Name: <%= @user.name %></b><br>
  <b>Email: <%= @user.email %></b> <br> <hr>
  <% if @user.is_user?(@current_user) %>
    <%= render "partials/inbox" %> <br>     <hr>
  <% elsif @user %>
    <b>Conversation</b> <br> <br>
    <% @current_user.messages_with(@user).each do |msg| %>
      <li><i><%= msg.from_user.name %></i>: <%= msg.content_string %></li>
    <% end %>
  <% end %>
  <hr>
  <%= render "partials/new_message" %>
</container>