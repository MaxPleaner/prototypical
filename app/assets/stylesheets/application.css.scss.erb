button:not(.notbutton), .button {
  margin: 1px;
  padding: 4px;
  width: 100%;
}

.notform {
  display: inline-block;
}

form:not(.notform) {
  border: 1px solid grey;
  padding: 4px;
  background: lighten(beige, 15%);
  display: inline-block;
  margin: 15px;
  input {
    margin: 1px;
    padding: 4px;
  }
}

.hidden {
  display: none;
  visibility: hidden;
}